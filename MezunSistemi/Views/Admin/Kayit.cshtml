
@{
    ViewBag.Title = "Kayit";
    
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/AdminTema/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/AdminTema/css/sb-admin.css" rel="stylesheet">

</head>

<body class="bg-white">

    <div class="container">
        <div class="col-md-4 col-sm-6 mt-5 portfolio-item">
            <a class="portfolio-link" data-toggle="modal" href="#portfolioModal2">

                <img class="img-fluid" src="~/img/portfolio/ktu.jfif" alt="">
            </a>

            <div class="portfolio-caption mt-3">
                <h3>Mezun Sistemi</h3>
                @*<p class="text-muted">Karadeniz Teknik Üniversitesi</p>*@
                <h4>Karadeniz Teknik Üniversitesi</h4>
            </div>
        </div>
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Kayıt Olma</div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="text" id="firstName" class="form-control" placeholder="First name" required="required" autofocus="autofocus">
                                    <label for="firstName">Ad</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="text" id="lastName" class="form-control" placeholder="Last name" required="required">
                                    <label for="lastName">Soyad</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="required">
                            <label for="inputEmail">E mail</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="required">
                                    <label for="inputPassword">Şifre</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm password" required="required">
                                    <label for="confirmPassword">Okul Numarası</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-block" href="/Admin/Login">Kaydet</a>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Admin/Login">Giriş Ekranı</a>

                    

                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminTema/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminTema/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/AdminTema/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>


